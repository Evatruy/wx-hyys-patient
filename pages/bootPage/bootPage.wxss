/* pages/bootPage/bootPage.wxss */
page{
  width: 100%;
  height: 100%;
  font-size: 34rpx;
  color: #fff;
}

.logo_v{
  height: auto;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login_icon{
  width: 220rpx;
  height: 114rpx;
  margin-top: 5%;
}

.btn_open{
  width: 84%;
  font-size: 32rpx;
  height: 96rpx;
  background: linear-gradient(90deg, #00D190 0%, #00E3A4 100%);
  border-radius: 48rpx;
  color: #fff;
  position: absolute;
  bottom: 90rpx;
  left: 8%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon_wx{
  width: 60rpx;
  height: 50rpx;
  vertical-align: middle;
  padding-right: 20rpx;
}

button::after {
  border: none
}

.goOn{
  position: relative;
}
.goOn>text{
  position: absolute;
  left: 44%;
  top: 46%;
  font-size: 24rpx;
  color: #fff;
}