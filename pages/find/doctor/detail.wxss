/* pages/find/doctor/detail.wxss */
.page{
  
}

.top{
  height: 320rpx;
  background-color: #0DD498;  
  padding-top: 37rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.info-top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.info-top image{
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.first-layer{
  display: flex;
  flex-direction: row;
  flex: 1;
}

.first-text { 
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #FFFFFF;
}

.signal{  
  background: #FFAF3C;
  border-radius: 3px;
  margin-left: 16rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;  
  font-size: 20rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
}

.info-item{
  flex: 1;
}

.info-item>text{ 
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  word-break: break-all;
}

.followed{
  width: 148rpx;
  height: 60rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #27CC92;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.followed_no{
  width: 148rpx;
  height: 60rpx;
  background: #0BA174;
  border-radius: 30rpx;
  display: inline-flex;
  align-items: center;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #FFFFFF;
  margin-left: 10rpx;
}

.long-dec{
  padding-left: 44rpx;
  padding-right: 73rpx;
  display: -webkit-box;/*关键属性*/
  font-size:28rpx;
  color:#202028;
  word-break: break-all;
  -webkit-box-orient: vertical;/* 关键属性 */
  -webkit-line-clamp:4;/* 关键属性 */
  overflow: hidden;/* 关键属性 */
  text-overflow:ellipsis;/* 超出内容显示省略号*/
}

.hide{
 display: -webkit-box;
}
.show{
 display: block;
}
.arrow{
 position: relative;
 width: 30rpx;
 height: 20rpx;
 left: 50%;
 transform: translate(-50%);
 padding-top: 24rpx;
 padding-bottom: 28rpx;
}

