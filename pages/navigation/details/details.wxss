/* pages/navigation/details/details.wxss */
.image-list{
  padding: 55rpx 0rpx 30rpx 0rpx;
  display: flex;
  white-space: nowrap; 
}
.image-list image{
  width: 400rpx;
  height: 267rpx;
  display: inline-block;
  margin-right: 30rpx;
}
.image-list image:nth-child(1){
  margin-left: 30rpx;
}
.title{
  padding: 0rpx 30rpx;
  color: #374AA0;
}
.view_title{
  padding: 60rpx 30rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
}
.view_title::before{
  content: '';
  width: 10rpx;
  height: 30rpx;
  background: #6A7BC7;
  margin-right: 20rpx;
}
.view-content{
  padding: 0rpx 30rpx;
  word-break: break-all; /* 追加这一行代码 */
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}