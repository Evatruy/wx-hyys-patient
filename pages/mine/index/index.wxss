/* pages/mine/index/index.wxss */
page{
  background: #fff;
}
.header{
  height: 300rpx;
  background: #0CD498;
}

.header-num{
  width: 14rpx;
  height: 14rpx;
  display: inline-block;
  text-align: center;
  line-height: 30rpx;
  padding: 4rpx;
  background: rgb(255, 44, 44);
  color: #fff;
  font-size: 22rpx;
  border-radius: 50%;
  position: absolute;
  top: 25rpx;
  right: 30rpx;
}

.header-right image{
  width: 55rpx;
  height: 40rpx;
  display: inline-block;
  position: absolute;
  right: 37rpx;
  top: 31rpx;
}

.header-center{
  padding-left: 32rpx;
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #FFFFFF;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header-center image{
  width: 144rpx;
  height: 144rpx;
}

.header-center text{
  font-size: 36rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #FFFFFF;
}

.avatar-view{
  overflow:hidden;  
  display: block;  
  width: 144rpx;  
  height: 144rpx;  
  margin: 20rpx;  
  /* margin-top: 50rpx;   */
  border-radius: 50%;  
  /* box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);   */
}

.section-view{
  display: flex;
  justify-content: space-between;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 50rpx;
}

.section{
  width: 320rpx;
  height: 180rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 3rpx 18rpx 0rpx rgba(0, 0, 0, 0.19);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.section image{
  width: 58rpx;
  height: 72rpx;
  margin-right: 25rpx;
}

.section text{
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  color: #202028;
}

.func-view{
  margin-top: 100rpx;
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-bottom: 100rpx;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}

.func-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}

.func-item image{
  width: 74rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
}

.func-item text{
  font-size: 26rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #202028;
}